<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="posts-form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'posts-form-control' %>
  </div>

  <div class="posts-form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'posts-form-control' %>
  </div>

  <div class="posts-form-group">
    <%= form.label :content %>
    <%= form.rich_text_area :rich_content, class: 'posts-form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn-blog-form' %>
  </div>
<% end %>
