<%= form_with(model: book) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :rating_text, "Rating text (e.g '7/10')" %>
    <%= form.text_field :rating_text, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :rating_number %>
    <%= form.number_field :rating_number, in: 1..10, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :short_description %>
    <%= form.text_area :short_description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :category %>
    <%= form.text_field :category, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :author_id %>
    <%# <%= form.text_field :author_name, class: "form-control" %>
    <%= form.number_field :author_id, class: "form-control" %>
    # <%# <%= form.rich_text_area :rich_notes, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Notes %>
    <%= form.rich_text_area :rich_notes, class: "form-control" %>
    <%# <%= form.rich_text_area :rich_notes, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "form-btn" %>
  </div>

<% end %>
